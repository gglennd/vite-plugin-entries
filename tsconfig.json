{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node"],

    /* Linting */
    "strict": true,
    "noUnusedLocals": true
  },
  "include": ["src"]
}
